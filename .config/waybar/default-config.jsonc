      "(.*) ‚Äî Mozilla Firefox": "Û∞áß $1",
      "(.*) ‚Äî Brave": "Û∞áß $1",
      "(.*) - Discord": "Û∞ôØ $1",
    },
    "separate-outputs": true
  },
  "mpris": {
    "player": "spotify",
    "format": "{player_icon} {artist} - {title}",
    "format-paused": "{status_icon} <i>{artist} - {title}</i>",
    "player-icons": {
      "default": "<span color='#A3BE8C'>ÔÖÑ</span>",
      "mpv": "<span color='#A3BE8C'>Û∞éà</span>",
      "spotify": "<span color='#A3BE8C'>ÔÜº</span>"
    },
    "status-icons": {
      "paused": "<span color='#D08770'>‚è∏</span>"
    },
    // "ignored-players": [
    //   "firefox"

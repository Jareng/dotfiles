  "clock": {
    "format": "<span color='#5E81AC'>ÔÄó</span> {:%H:%M} ",
    "locale": "fr_FR.UTF-8",
    "format-alt": "<span color='#5E81AC'>ÔÅ≥</span> {:L%A %d %B %Y (%R)} ",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode"          : "month",
      "mode-mon-col"  : 2,
      "weeks-pos"     : "right",
      "on-scroll"     : 1,
      "on-click-right": "mode",
      "format": {
        "months":     "<span color='#E5E9F0'><b>{}</b></span>",
        "days":       "<span color='#B3B8C3'><b>{}</b></span>",
        "weeks":      "<span color='#A3BE8C'><b>W{}</b></span>",
        "weekdays":   "<span color='#EBCB8B'><b>{}</b></span>",
        "today":      "<span color='#5E81AC'><b><u>{}</u></b></span>"
      }
    },
    "actions":  {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",

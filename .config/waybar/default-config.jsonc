// vim: ft=jsonc
{
  "layer": "top",
  "position": "top",
  "mode": "dock",
  "exclusive": true,
  "passtrough": false,
  "gtk-layer-shell": true,
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window"
  ],
  "modules-center": [
    "mpris"
  ],
  "modules-right": [
    "bluetooth",
    "pulseaudio",
    "custom/cpu",
    "cpu",
    "temperature",
    "custom/gpu",
    // "custom/gpuinfo",
    "custom/gpu-usage",
    "temperature#gpu",
    "memory",
    "network",
    "idle_inhibitor",
    "tray",
    "custom/weather",
    "clock"
  ],
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "active-only": false,
    "show-special": false,
    "special-visible-only": true,
    "format": "{name}",
    "on-click": "activate",
    "sort-by-number": true,
  },
  "hyprland/window": {
    "format": "{}",

  "network": {
    // "interface": "wlp2s0",
    "format": "{ifname}",
    "format-wifi": "<span color='#5E81AC'>Ôá´</span> {essid} ({signalStrength}%)",
    "format-ethernet": "<span color='#5E81AC'>Û∞àÄ</span> ",

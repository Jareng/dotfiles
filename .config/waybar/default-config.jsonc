  "cpu": {
    "interval": 1,
    "format": "<span color='#5E81AC'>Û∞ª†</span> {icon} {usage}% ({load})",
    "format-icons": [
      "<span color='#69ff94'>‚ñÅ</span>", // green
      "<span color='#2aa9ff'>‚ñÇ</span>", // blue
      "<span color='#f8f8f2'>‚ñÉ</span>", // white
      "<span color='#f8f8f2'>‚ñÑ</span>", // white
      "<span color='#ffffa5'>‚ñÖ</span>", // yellow
      "<span color='#ffffa5'>‚ñÜ</span>", // yellow
      "<span color='#ff9977'>‚ñá</span>", // orange
      "<span color='#dd532e'>‚ñà</span>"  // red
    ]
  },
  "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
    "critical-threshold": 90,
    "format": "<span color='#5E81AC'>{icon}</span> {temperatureC}¬∞",
    "format-critical": "<span color='#bf616a'>{icon}</span> {temperatureC}¬∞",
    "format-icons": [
      "Ôãã", // Icon: temperature-empty
      "Ôãä", // Icon: temperature-quarter
      "Ôãâ", // Icon: temperature-half
      "Ôãà", // Icon: temperature-three-quarters
      "Ôãà" // Icon: temperature-full
    ]
  },
  "custom/gpu": {
    "format": "<span color='#5E81AC'> GPU</span>:",
  },
  "custom/gpuinfo": {
    "exec": " ~/.config/waybar/scripts/gpuinfo.sh",
    "return-type": "json",
    "format": "<span color='#5E81AC'>Ôãã</span> {}",
    "interval": 1, // once every 5 seconds
    "tooltip": true
  },
  "custom/gpu-usage": {
    "exec": "cat /sys/class/hwmon/hwmon0/device/gpu_busy_percent",
    "format": "<span color='#5E81AC'>Û∞ª†</span> {}%",
    "return-type": "",
    "interval": 1
  },
  "temperature#gpu": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon0/temp1_input",
    "critical-threshold": 90,
    "format": "<span color='#5E81AC'>{icon}</span> {temperatureC}¬∞",
    "format-critical": "<span color='#bf616a'>{icon}</span> {temperatureC}¬∞",
    "format-icons": [
      "Ôãã", // Icon: temperature-empty
      "Ôãä", // Icon: temperature-quarter
      "Ôãâ", // Icon: temperature-half
      "Ôãà", // Icon: temperature-three-quarters
      "Ôãà" // Icon: temperature-full
    ]
  },
  "memory": {
    "interval": 30,
    // "format": "<span color='#5E81AC'>ÔÉâ</span> {used:0.1f}G/{total:0.1f}G",
    "format": "<span color='#5E81AC'>Û∞çõ</span> {}%",
    "tooltip": true,
    "tooltip-format": "Memory:\t{used:0.1f}G/{total:0.1f}G\t{percentage}%\nSwap:\t{swapUsed:0.1f}G/{swapTotal:0.1f}G\t{swapPercentage}%"
  },
